@model Bet.DTO.BetDto

@{
    ViewBag.Title = "BetForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BetForm</h2>


<div id="bets" class="form-horizontal">
    <h4>BetImpl</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.GameName, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(model => model.GameName, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.GameName, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Guess, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(model => model.Guess, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Guess, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MoneyBet, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(model => model.MoneyBet, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.MoneyBet, "", new {@class = "text-danger"})
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.GameId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GameId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GameId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.GroupId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GroupId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default js-create" />
        </div>
    </div>
</div>


@section scripts
{
    <script>

        $("#bets").on("click",
            " .js-create",
            function() {
                var button = $(this);

                bootbox.confirm("Are you sure you want to update this bets",
                    function(result) {
                        if (result) {
                            $.ajax({
                                url: "/api/bets/"+ $(this).attr("data-bet-id"),
                                method: "CREATE",
                                success: function() {
                                    button.parents("tr").remove();
                                }
                            });
                        }
                    });

            });
    </script>
}