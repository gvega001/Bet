@model IEnumerable<Bet.DTO.BetDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bets</h2>
<p>
    @Html.ActionLink("Make Bet","Index", "NewBet", null, new{@class="btn btn-primary"})
</p>
<table id="bets" class="table">
    <thead>
    <tr>
        <th>Group</th>
        <th>Guess</th>
        <th>Bet Amount</th>
        <th>Delete</th>

    </tr>
    </thead>
    <tbody>

    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#bets").DataTable({
                ajax: {
                    url: "/api/bets",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data,type, bet) {
                            return "<a href=' /bet/details/" + bet.id + "'>" + bet.name + "</a>";

                        }
                    },
                    {
                        data: "id"
                    },
                    {
                        data: "id"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class= 'btn-link js-delete' data-bet-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#groups").on("click"," .js-delete",
                function () {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this bets", function(result) {
                        if (result) {
                            $.ajax({
                                url: "/api/bets/" + $(this).attr("data-bet-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            });
                        }
                    });
                   
                });
        });
    </script>
}
