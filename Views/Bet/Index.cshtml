@model IEnumerable<Bet.DTO.BetDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxPossibleNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LowestPossibleNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Guess)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxPossibleNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LowestPossibleNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Guess)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@section scripts
{
    <script>
    $(document).ready(function() {

        $("#bets").on("click",".js-delete", function() {
            var button = $(this);

                bootbox.confirm("Are you sure you want to delete this bet?", function(result) {
                    if (result) {
                        $.ajax({
                            url: "/api/bets/" + button.attr("data-group-id"),
                            method: "DELETE",
                            success: function() {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
    });
        </script>
    }    }