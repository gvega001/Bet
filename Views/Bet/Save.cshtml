            @Html.ValidationMessageFor(model => model.MoneyBet, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Id, htmlAttributes: new {@class = "control-label col-md-2"})
