
@using Bet.DTO
@model IEnumerable<Bet.DTO.GroupDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Groups</h2>

<p>
    @Html.ActionLink("Create Group","New", "Group", null, new{@class="btn btn-primary"})
</p>
<table id="groups" class="table">
    <thead>
    <tr>

        <th>Group</th>
       
        <th>Join Code</th>
       
        <th>Delete</th>
    </tr>
    </thead>

    <tbody>

    </tbody>

</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#groups").DataTable({
                ajax: {
                    url: "/api/groups",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data,type, group) {
                            return "<a href=' /group/details/" + group.id + "'>" + group.Name + "</a>";

                        }
                    },
                    {
                        data:"id"
                    },

                    {
                        data: "name",
                        render: function(data) {
                            return "<button class= 'btn-link js-delete' data-group-id=" + data + ">Delete</button>";
                        }
                    }
                    ]
            });

            $("#groups").on("click"," .js-delete",
                function () {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this groups", function(result) {
                        if (result) {
                            $.ajax({
                                url: "/api/groups/" + $(this).attr("data-group-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            });
                        }
                    });
                   
                });
        });
    </script>
}
