@model IEnumerable<Bet.DTO.GroupDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table id="groups" class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoinCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameId)
        </th>
        <th></th>
    </tr>

</table>
@section scripts
{
    <script>

    $(document).ready(function() {
        $("#groups").dataTable({
            ajax: {
                url: "/api/groups",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name",
                    render: function (data, type, group) {
                        return "<a href= /group/index/" + data.id + "'>" + data.GroupName + "</a>";
                    }
                },
                {
                    data: "id",
                    render: function(data) {
                        return "<button class = 'btn-link js-delete' data-group-id=" + data + ">Delete</button>";
                    }
                }
            ]

        });

        $("#groups").on("click", ".js-delete", function() {

            var button = $(this);

            bootbox.confirm("Are you sure you want to delete this groups?",
                function(result) {
                    if (result) {
                        $.ajax({
                            url: "/api/groups/" + button.attr("data-group-id"),
                            method: "DELETE",
                            success: function() {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
    </script>
}
